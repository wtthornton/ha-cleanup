{
  "id": null,
  "title": "PROD: Device Communication & Network Health Dashboard",
  "tags": ["device-communication", "network-health", "connectivity-monitoring", "home-assistant", "ha-ingestor", "production", "prod"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "60s",
  "time": {"from": "now-24h", "to": "now"},
  "panels": [
    {
      "id": 1,
      "title": "Network Connectivity Status (Last 24h)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "query": "from(bucket: \"ha_events\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] =~ /ha_/) |> filter(fn: (r) => r[\"domain\"] =~ /(light|switch|sensor|climate)/) |> filter(fn: (r) => r[\"state\"] != \"unavailable\") |> count() |> yield(name: \"Connected Devices\")",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "green", "value": 100}
            ]
          },
          "unit": "short",
          "displayName": "Connected Devices",
          "custom": {
            "displayMode": "color-background"
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Communication Protocol Usage (Last 24h)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "query": "from(bucket: \"ha_events\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] =~ /ha_/) |> filter(fn: (r) => r[\"domain\"] =~ /(light|switch|sensor|climate)/) |> group(columns: [\"source\"]) |> count() |> yield(name: \"Protocol Usage\")",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short",
          "displayName": "Protocol Count",
          "custom": {
            "displayMode": "color-background"
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Device Response Time Trends (Last 24h)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 18, "x": 6, "y": 4},
      "targets": [
        {
          "query": "from(bucket: \"ha_events\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] =~ /ha_/) |> filter(fn: (r) => r[\"domain\"] == \"sensor\") |> filter(fn: (r) => r[\"_field\"] == \"state\") |> aggregateWindow(every: 1h, fn: count, createEmpty: false) |> group(columns: [\"domain\"]) |> yield(name: \"Sensor Device Activity\")",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "gradientMode": "scheme"
          },
          "unit": "short"
        }
      },
      "options": {
        "legend": {
          "displayMode": "visible",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 4,
      "title": "Connection Health by Device Type (Last 24h)",
      "type": "table",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "query": "from(bucket: \"ha_events\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] =~ /ha_/) |> filter(fn: (r) => r[\"domain\"] =~ /(light|switch|sensor|climate)/) |> filter(fn: (r) => r[\"_field\"] == \"state\") |> aggregateWindow(every: 1h, fn: count, createEmpty: false) |> group(columns: [\"domain\", \"entity_id\"]) |> mean() |> sort(columns: [\"_value\"], desc: true) |> limit(n: 25) |> yield(name: \"Device Activity\")",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "color-background"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "_value"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Activity Count"
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "domain"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Device Type"
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "entity_id"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Device ID"
              }
            ]
          }
        ]
      }
    },
    {
      "id": 5,
      "title": "Network Activity Heatmap (Last 24h)",
      "type": "heatmap",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "query": "from(bucket: \"ha_events\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] =~ /ha_/) |> filter(fn: (r) => r[\"domain\"] == \"sensor\") |> filter(fn: (r) => r[\"_field\"] == \"state\") |> aggregateWindow(every: 1h, fn: count, createEmpty: false) |> group(columns: [\"entity_id\"]) |> yield(name: \"Individual Device Activity\")",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 6,
      "title": "Protocol Usage Analysis (Last 24h)",
      "type": "barchart",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "query": "from(bucket: \"ha_events\") |> range(start: -24h) |> filter(fn: (r) => r[\"_measurement\"] =~ /ha_/) |> group(columns: [\"source\"]) |> count() |> sort(columns: [\"_value\"], desc: true) |> yield(name: \"Protocol Usage\")",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "fillOpacity": 80
          }
        }
      }
    }
  ]
}
