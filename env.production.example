# Production Environment Configuration for ha-cleanup
# Copy this file to .env.production and fill in your values

# Application Configuration
NODE_ENV=production
PORT=3000

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your_readonly_token_here
INFLUXDB_ORG=your_org_name
INFLUXDB_BUCKET=ha_events

# InfluxDB Admin Configuration (for initial setup)
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=secure_admin_password
INFLUXDB_ADMIN_TOKEN=your_admin_token_here

# Grafana Configuration (optional)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_grafana_password

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=64

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=https://yourdomain.com

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache Configuration
REDIS_URL=redis://redis:6379
CACHE_TTL=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
